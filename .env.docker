# Docker Production Environment Configuration

# Application
NODE_ENV=production
PORT=3001

# Database
DB_PATH=/app/database/drafttracker.db

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=104857600

# OSM Conversion
OSM_TEMP_DIR=/app/uploads/temp
DXF_OUTPUT_DIR=/app/uploads/dxf

# API Configuration
API_BASE_URL=http://backend:3001
FRONTEND_URL=http://localhost:3000

# Security
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log