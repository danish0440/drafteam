# Production Server Environment Variables
# Copy this to server/.env on your VPS and update the values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
DATABASE_PATH=/app/data/drafttracker.db
DATABASE_BACKUP_PATH=/app/backups

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,dwg,dxf,jpg,jpeg,png

# API Keys (IMPORTANT: Update these with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production_12345
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_change_this_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://drafteam.space
CORS_CREDENTIALS=true

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/server.log
ERROR_LOG_FILE=/app/logs/error.log

# Python Script Configuration
PYTHON_PATH=/usr/bin/python3
OSM_CONVERTER_TIMEOUT=300000

# Health Check
HEALTH_CHECK_ENDPOINT=/api/health

# Production Optimizations
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=128